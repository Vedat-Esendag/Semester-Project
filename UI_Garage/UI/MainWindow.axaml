<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
        MinWidth="450" MinHeight="300"
        x:Class="UI.MainWindow"
        Title="UI"
        Background="White">
        
        
        
       <Grid RowDefinitions="Auto, *, *, *, *, *" Background="#DAEBF4">
                
               <!-- Title Bar -->
               <Grid Grid.Row="0" Background="#1984C5" Height="60" ColumnDefinitions="Auto, Auto, *, Auto, Auto">
                        <Grid Grid.Column="0" Background="rgb(25, 132, 197)" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="160">
                                <Label Content="Semester Project"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"
                                       FontSize="18"/>
                        </Grid>
                        <StackPanel 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Grid.Column="2">
                                <Label FontWeight="Black" FontSize="28" Foreground="White">Navigation</Label>
                        </StackPanel>
                        <Grid Grid.Column="4" Background="rgb(25, 132, 197)" Width="80">
                                <Label Content="Group 4"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"
                                />
                        </Grid>
                </Grid>
                
                <!-- Section 1 -->
                <Grid Grid.Row="1" Background="rgb(218, 235, 244)" Height="90">
                        <Button Content="Production Units" 
                                Width="170" 
                                Height="50"
                                Background="rgb(25, 132, 197)"
                                Foreground="White"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Margin="5"
                                Click="NavigateToPuPage_Click">
                                <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                          Color="#808080"
                                                          Opacity="0.8"/>
                                </Button.Effect>
                        </Button>
                        
                        <TextBlock Text="Click button to see details of production units such as maximum heat and electricity production and image" 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Width="280"
                                   TextAlignment="Center"/>
                        <Polyline Margin="-20,70,0,0" Points="1200,20 20,20" Stroke="Black" StrokeThickness="2"/>

                </Grid>
                
                <!-- Section 2 -->
                <Grid Grid.Row="2" Background="rgb(218, 235, 244)" Height="75">
                        <Button Content="Heat demand" 
                                Width="170" 
                                Height="50"
                                Background="rgb(25, 132, 197)"
                                Foreground="White"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Margin="5"
                                Click="NavigateToHeatDemand_Click">
                                <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                          Color="#808080"
                                                          Opacity="0.8"/>
                                </Button.Effect>
                        </Button>
                        
                        
                        
                        <TextBlock Text="Click button to see the datas about heat demand needed in winter and summer period respectively." 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Width="280"
                                   TextAlignment="Center"/>
                        <Polyline Margin="-20,70,0,0" Points="1200,20 20,20" Stroke="Black" StrokeThickness="2"/>
                </Grid>
                     
                <!-- Section 3 -->
                <Grid Grid.Row="3" Background="rgb(218, 235, 244)" Height="75">
                        <Button Content="Electricity Price" 
                                Width="170" 
                                Height="50"
                                Background="rgb(25, 132, 197)"
                                Foreground="White"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Margin="5"
                                Click="NavigateToElectricityPrice_Click">
                                <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                          Color="#808080"
                                                          Opacity="0.8"/>
                                </Button.Effect>
                        </Button>
                        
                        <TextBlock Text="Click button to see datas about electricity price in winter and summer period respectively." 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Width="280"
                                   TextAlignment="Center"/>
                        <Polyline Margin="-20,70,0,0" Points="1200,20 20,20" Stroke="Black" StrokeThickness="2"/>
                </Grid>
                
                <!-- Section 4 -->
                <Grid Grid.Row="4" Background="rgb(218, 235, 244)" Height="75">
                        <Button Content="Optimizer" 
                                Width="170" 
                                Height="50"
                                Background="rgb(25, 132, 197)"
                                Foreground="White"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Margin="5"
                                Click="NavigateToConsumption_Click">
                                <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                          Color="#808080"
                                                          Opacity="0.8"/>
                                </Button.Effect>
                        </Button>
                        
                        <TextBlock Text="Click button to see datas about consumption of electricity as a console column format." 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Width="280"
                                   TextAlignment="Center"/>
                        <Polyline Margin="-20,70,0,0" Points="1200,20 20,20" Stroke="Black" StrokeThickness="2"/>
                </Grid>
                
                <!-- Section 5 -->
                <Grid Grid.Row="5" Background="rgb(218, 235, 244)" Height="75">
                        <Button Content="Advanced Details" 
                                Width="170" 
                                Height="50"
                                Background="rgb(25, 132, 197)"
                                Foreground="White"
                                BorderThickness="2"
                                CornerRadius="12"
                                Padding="10"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Margin="5"
                                Click="NavigateToAdvancedDetails_Click">
                                <Button.Effect>
                                        <DropShadowEffect BlurRadius="5"
                                                          Color="#808080"
                                                          Opacity="0.8"/>
                                </Button.Effect>
                        </Button>
                        
                        <TextBlock Text="Click button to see and compare advanced details supported by graphs and charts with values." 
                                   HorizontalAlignment="Right" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Width="280"
                                   TextAlignment="Center"/>
                </Grid>
       </Grid>
</Window>
